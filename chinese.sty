%==============================================
%           设置中文格式布局
%==============================================
\usepackage{xunicode, xltxtra}
\usepackage{indentfirst}    % 正文每段开始时缩进
\XeTeXlinebreaklocale "zh"
\setlength{\parindent}{2em} % 段首缩进间距
\linespread{1.5}            % 行距
\frenchspacing              % 取消标点符号背后的latex添加的空格
% 避免孤行（避免某段最后一行位于一页的第一行）
\widowpenalty=10000

%==============================================
%           定义中文字体
%==============================================
\usepackage{fontspec}
%\usepackage{fancyhdr, titlesec}
%将系统字体名映射为逻辑字体名称，主要是为了维护的方便
\newcommand\fontnamekai{文泉驿正黑}
\newcommand\fontnamehei{文泉驿正黑}
\newcommand\fontnamesong{文泉驿正黑}
\newcommand\fontnamemono{文泉驿等宽正黑}
\newcommand\fontnameroman{Nimbus Roman No9 L}

\setmainfont[Mapping=tex-text]{文泉驿正黑}
\setsansfont[Mapping=tex-text]{文泉驿正黑}
\setmonofont{\fontnamemono}

%楷体
\newfontinstance\KAI{\fontnamekai}
\newcommand{\kai}[1]{{\KAI #1}}

%黑体
\newfontinstance\HEI{\fontnamehei}
\newcommand{\hei}[1]{{\HEI #1}}

%英文
\newfontinstance\ENF{\fontnameroman}
\newcommand{\en}[1]{\,{\ENF #1}\,}
\newcommand{\EN}{\,\ENF\,}

%=====================================================
%   设置标题为中文
%=====================================================
\usepackage{titlesec, titletoc}

%设置章名为右对齐，字号为\Huge，字型为黑体，章号用粗体，并设置间距：
\titleformat{\chapter}{\flushright\Huge}{{\bf 第~\thechapter~章、}}{0pt}{}
\titlespacing{\chapter}{0pt}{-20pt}{25pt}

%设置节名的字号为\Large，字型为黑体，节号用粗体，并设置间距：
\titleformat{\section}{\Large}{{\bf 第~\thesection~节、}}{0pt}{}
\titlespacing*{\section}{0pt}{1ex plus .3ex minus .2ex}{-.2ex plus .2ex}

%设置小节名
\titleformat{\subsection}{\large}{{\bf\thesubsection、}}{0pt}{}
\titleformat{\subsubsection}{\large}{{\bf\thesubsubsection、}}{0pt}{}

